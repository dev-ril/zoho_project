<div class="loginPage">
    <h1 style="margin-left: 40px;">Login</h1>
    <br><br>
    <label>UserName</label>
    <div style="margin-top: 10px;">
    {{input value=userName}}
    </div>
    <br>
    <label>Password</label>
    <div style="margin-top: 10px;">
    {{input value=password type="password"}}
    </div>
    <br><br>
    <div style="margin-left: 40px;" class="button" {{on "click" (fn this.login userName password)}}>Login</div>
    <br><br>
    <label>New user?</label>     
    <LinkTo @route="register">
        Register here
    </LinkTo>
</div>


